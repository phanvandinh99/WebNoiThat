@model IEnumerable<Model.Role>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

	<div class="box">
		<h2 style="text-align:center">Quản lý Roles</h2>
		<p>
			<a class="btn btn-primary" href="@Url.Action("Create")">Tạo mới</a>	
		</p>
		<div class="box-body">
			<table id="example1" class="table table-bordered table-hover">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.RoleName)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Description)
						</th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.RoleName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Description)
							</td>
							<td>
								<a class="btn btn-primary" style="font-size:10px;" href="@Url.Action("Edit", new { id=item.RoleId })"><i class="fa fa-fw  fa-pencil"></i></a>
								<a class="btn btn-success" style="margin-left:10px;font-size:10px;" href="@Url.Action("DetailRole", new { id=item.RoleId })"><i class="fa fa-fw fa-list"></i></a>
								<a class="btn btn-danger" style="margin-left:10px;font-size:10px;" href="@Url.Action("Delete", new { id=item.RoleId })"><i class="fa fa-fw fa-trash"></i></a>

							</td>
						</tr>
					}

				</tbody>
			</table>
		</div>
	</div>
