@model IEnumerable<Model.Banner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Quản lý Banner</h2>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Tạo mới</a>
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="example1" class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Images)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifileDate)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img width="250px" src="@item.Images" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @if (item.Status)
                {
                    <span class="label label-success">Hiện</span>
                }
                else
                {
                    <span class="label label-danger">Ẩn</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifileDate)
            </td>
            <td>
                <a class="btn btn-primary" style="font-size:10px;" href="@Url.Action("Edit", new { id=item.ID })"><i class="fa fa-fw  fa-pencil"></i></a>
                <a class="btn btn-danger" style="margin-left:10px;font-size:10px;" href="@Url.Action("Delete", new { id=item.ID })"><i class="fa fa-fw fa-trash"></i></a>
            </td>
        </tr>
    }

</table>

